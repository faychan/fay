
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete outbond</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure want to delete this outbond?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="deletThis">Yeah</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">N-nooo</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit User</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="hidID" />
                <div class="full-width">
                    <div class="form-group">
                        <div class="input-group">
                            <label for="outbondName" class="control-label">Name</label>
                            <input type="text" id="outbondName" class="form-control" />
                        </div>
                        <div class="input-group">
                            <label for="outbondPrice" class="control-label">Price</label>
                            <input type="text" id="outbondPrice" class="form-control" />
                        </div>
                        <div class="input-group">
                            <label for="outbondStock" class="control-label">Stock</label>
                            <input type="text" id="outbondStock" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveData">Save changes</button>
                    </div>
                </div>
                <script>
    var outbondID, outbondName, outbondPrice, outbondStock;
    function Deleteoutbond(id) {
        $.ajax({
            type: "POST",
            url: "@(Url.Action("DeleteUser","outbond"))",
            data: { outbondID: id },
        success: function (data) {
            $("#divoutbondListContainer").load("@(Url.Action("outbondPartial","outbond"))");
            console.log("outbond Deletion success!");
        },
        error: function (error) {
            console.log("outbond Deletion Failed!!");
        }
    });
    }

    function Updateoutbond() {

        console.log(outbondName)
        console.log(outbondPrice)
        console.log(outbondStock)
        console.log(outbondID)

        $.ajax({
            type: "POST",
            url: "@(Url.Action("UpdateoutbondData","outbond"))",
            data: {
                outbondID: outbondID,
                outbondName: outbondName,
                outbondPrice: outbondPrice,
                outbondStock: outbondStock
            },
            success: function(data){
                $("#divoutbondListContainer").load("@(Url.Action("outbondPartial","outbond"))");
                console.log("outbond Edit success!");
                console.log(data);
            },
            error: function (error) {
                console.log("outbond Edit Failed!");
            }
        });
    }
    var id;
    $("button.outbondDelete").click(function () {
        var row = $(this).closest('tr');
        id = row.find("td:eq(0)").html().trim();
        console.log(id);
        $("#deleteModal").modal('show');
    });

    $("button.outbondEdit").click(function () {
        var row = $(this).closest('tr');
        outbondName = row.find("td:eq(1)").html().trim();
        outbondPrice = row.find("td:eq(2)").html().trim();
        outbondStock = row.find("td:eq(3)").html().trim();
        outbondID = row.find("td:eq(0)").html().trim();
        $("#outbondName").val(outbondName);
        $("#outbondPrice").val(outbondPrice);
        $("#outbondStock").val(outbondStock);
        $("#editModal").modal('show');
    });

    $("#deletThis").click(function () {
        Deleteoutbond(id);
        $('#deleteModal').modal('hide');
    });

    $("#saveData").click(function () {
        outbondName = $("#outbondName").val();
        outbondPrice = $("#outbondPrice").val();
        outbondStock = $("#outbondStock").val();
        Updateoutbond();
        $('#editModal').modal('hide');
    });
                </script>
